// 日语振假名站点 - 数据库模型
// 生产使用 PostgreSQL（Vercel Postgres / Railway）；本地可用同一 Postgres 或远程 URL

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id @default(cuid())
  email               String?   @unique  // 邮箱登录
  phone               String?   @unique  // 手机号登录，至少其一
  password            String?   // 密码（bcrypt 加密），激活码用户必须设置
  isPremium           Boolean   @default(false)  // 保留字段，向后兼容
  premiumExpiresAt    DateTime?  // Premium订阅到期时间（每月订阅）
  dailyUsed           Int       @default(0)
  dailyResetAt        DateTime?
  // 使用权限审批：null=未申请 pending=待审批 approved=已通过 rejected=已拒绝
  accessStatus        String?   // null | 'pending' | 'approved' | 'rejected'
  accessRequestedAt   DateTime?
  accessApprovedAt    DateTime?
  accessRejectReason  String?
  isAdmin             Boolean   @default(false)  // 管理员，可审批他人
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  orders              Order[]
  sessions            Session[]
  activationCode      ActivationCode?
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Verification {
  id        String   @id @default(cuid())
  email     String?  // 邮箱验证
  phone     String?  // 手机验证，至少其一
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Order {
  id         String   @id @default(cuid())
  orderId    String   @unique  // 支付平台订单号，用于回调
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount     Int      // 金额（分）
  status     String   // pending | paid | failed | refunded
  channel    String?  // alipay | wechat
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ActivationCode {
  id        String   @id @default(cuid())
  code      String   @unique  // 激活码，格式：FURIGANA-XXXX-XXXX
  userId    String?  @unique  // 使用后关联的用户ID（一个用户只能有一个激活码）
  email     String?  // 可选：预填邮箱（用于创建账号）
  phone     String?  // 可选：预填手机号（用于创建账号）
  used      Boolean  @default(false)  // 是否已使用
  expiresAt DateTime?  // 过期时间（可选）
  createdAt DateTime @default(now())
  usedAt    DateTime?  // 使用时间
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  delivery  DeliveryRequest?  // 若通过「领取页」发放，关联一条发放记录
}

// 小红书等渠道：用户付款后提交订单号，管理员发放激活码，用户自助查询
model DeliveryRequest {
  id               String    @id @default(cuid())
  orderId          String    // 用户填的订单号（小红书订单号等）
  contactSuffix    String    // 手机号后4位或邮箱后缀，用于用户自助查询时核验
  contactFull      String?   // 可选：完整手机/邮箱，仅管理员可见
  status           String    @default("pending")  // pending | issued
  activationCodeId String?   @unique  // 发放后关联的激活码ID
  activationCode   ActivationCode? @relation(fields: [activationCodeId], references: [id], onDelete: SetNull)
  createdAt        DateTime  @default(now())
  issuedAt         DateTime? // 发放时间
}
