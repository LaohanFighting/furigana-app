// 日语振假名站点 - 数据库模型
// 生产使用 PostgreSQL（Vercel Postgres / Railway）；本地可用同一 Postgres 或远程 URL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String?   @unique  // 邮箱登录
  phone           String?   @unique  // 手机号登录，至少其一
  isPremium       Boolean   @default(false)  // 保留字段，向后兼容
  premiumExpiresAt DateTime?  // Premium订阅到期时间（每周订阅）
  dailyUsed       Int       @default(0)
  dailyResetAt    DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  orders          Order[]
  sessions        Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Verification {
  id        String   @id @default(cuid())
  email     String?  // 邮箱验证
  phone     String?  // 手机验证，至少其一
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Order {
  id         String   @id @default(cuid())
  orderId    String   @unique  // 支付平台订单号，用于回调
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount     Int      // 金额（分）
  status     String   // pending | paid | failed | refunded
  channel    String?  // alipay | wechat
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
